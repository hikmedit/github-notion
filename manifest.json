{
  "manifest_version": 3,
  "name": "GitHub to Notion Issues Sync",
  "version": "1.0",
  "description": "Syncs GitHub issues to a Notion database",
  "permissions": ["storage", "alarms"],
  "host_permissions": [
    "https://api.github.com/*",
    "https://api.notion.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
} 